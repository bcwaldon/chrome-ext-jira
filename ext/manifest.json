{
  "manifest_version": 2,

  "name": "JIRA Issues",
  "description": "This extension assists users in navigating to a specific JIRA issue.",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icons/icon-24.png",
   "default_popup": "popup.html"
  },

  "icons": {
    "16": "icons/icon-24.png",
    "48": "icons/icon-64.png",
    "128": "icons/icon-128.png"
  },

  "background": {
    "persistent": false,
    "scripts": ["core.js"]
  },

  "omnibox": { "keyword": "jira" },

  "permissions": [
    "activeTab",
	"storage"
  ],

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  }
}
